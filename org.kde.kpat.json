{
    "id": "org.kde.kpat",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kpat",
    "rename-icon": "kpat",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--share=network",
        "--socket=pulseaudio"
    ],

    "modules": [
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/libkdegames-21.12.1.tar.xz",
                    "sha256": "9e7152d377b916feba04dcdea723e8c52888f0ca24604fea8aa274539c3fad40"
                }
            ]
        },
        {
            "name": "freecell-solver",
            "buildsystem": "cmake",
            "config-opts": [ "-DFCS_WITH_TEST_SUITE=OFF", "-DFCS_BUILD_DOCS=OFF" ],
            "build-options" : {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.34.0:/app/lib/perl5/site_perl/5.34.0/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://fc-solve.shlomifish.org/downloads/fc-solve/freecell-solver-6.6.0.tar.xz",
                    "sha256": "16b58e78d44d95d0ff1b10496dd2d8bd27de592a26f8f874e95a1d841309048c"
                }
            ],
            "modules": [
                {
                    "name": "rinutils",
                    "buildsystem": "cmake",
                    "config-opts": [ "-DWITH_TEST_SUITE=OFF" ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/shlomif/rinutils/releases/download/0.10.0/rinutils-0.10.0.tar.xz",
                            "sha256": "70d89f0a8464f8f494f33704b7c9396e7fca392e8aafaa4465710c1a389e9806"
                        }
                    ]
                },
                {
                    "name": "random2",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://files.pythonhosted.org/packages/ee/b5/5aca5217501fbd06b1e5aed6d5986baa0da5380880e6bb6f421ed18e3a32/random2-1.0.1.zip",
                            "sha256": "34ad30aac341039872401595df9ab2c9dc36d0b7c077db1cea9ade430ed1c007"
                        }
                    ]
                },
                {
                    "name": "pbr",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [ { "type": "git", "url": "https://github.com/openstack/pbr.git", "tag": "5.5.1" } ]
                },
                {
                    "name": "pysol_cards",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://pypi.io/packages/source/p/pysol_cards/pysol_cards-0.14.2.tar.gz",
                            "sha256": "c08de857577bc3eec970c3add3c45b365316cc2844acd6083bb56ea31d40eaf0"
                        }
                    ]
                },
                {
                    "name": "perl-modules",
                    "buildsystem": "simple",
                    "build-commands": [
                        "echo 'this is a workaround for a flatpak+perl limitation'",
                        "tar xhf Path-Tiny-0.120.tar.gz",
                        "tar xhf Template-Toolkit-3.009.tar.gz",
                        "tar xhf Moo-2.005004.tar.gz",
                        "tar xhf Module-Runtime-0.016.tar.gz",
                        "tar xhf Sub-Quote-2.006006.tar.gz",
                        "cd Path-Tiny-0.120 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Template-Toolkit-3.009 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Moo-2.005004 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Module-Runtime-0.016 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Sub-Quote-2.006006 && perl Makefile.PL PREFIX=/app && make && make install",
                        "ln -s /app/lib/perl5/site_perl/5.34.0/$(basename `ls -d /usr/lib/perl5/5.34.0/*-linux`) /app/lib/perl5/site_perl/5.34.0/arch"
                    ],
                    "post-install": [
                        "chmod -R u+w /app/lib/perl5/site_perl"
                    ],
                    "sources": [
                        {
                            "type": "file",
                            "url": "https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/Path-Tiny-0.120.tar.gz",
                            "sha256": "66a1164981d449da46cc88383fe37f9e352e87e9570bfb960e43fe8ff016ee1b"
                        },
                        {
                            "type": "file",
                            "url": "https://search.cpan.org/CPAN/authors/id/A/AT/ATOOMIC/Template-Toolkit-3.009.tar.gz",
                            "sha256": "d6ad23bbf637a59b5dfd1ac006460dfcb185982e4852cde77150fbd085f1f5b6"
                        },
                        {
                            "type": "file",
                            "url": "https://cpan.metacpan.org/authors/id/H/HA/HAARG/Moo-2.005004.tar.gz",
                            "sha256": "e3030b80bd554a66f6b3c27fd53b1b5909d12af05c4c11ece9a58f8d1e478928"
                        },
                        {
                            "type": "file",
                            "url": "https://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Module-Runtime-0.016.tar.gz",
                            "sha256": "68302ec646833547d410be28e09676db75006f4aa58a11f3bdb44ffe99f0f024"
                        },
                        {
                            "type": "file",
                            "url": "https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/Sub-Quote-2.006006.tar.gz",
                            "sha256": "6e4e2af42388fa6d2609e0e82417de7cc6be47223f576592c656c73c7524d89d"
                        }
                    ]
                }
            ]
        },
        {
            "name": "black-hole-solver",
            "buildsystem": "cmake",
            "build-options" : {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.34.0:/app/lib/perl5/site_perl/5.34.0/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://fc-solve.shlomifish.org/downloads/fc-solve/black-hole-solver-1.10.1.tar.xz",
                    "sha256": "36e1953a99e02e82489a3cb109fb590bcab307b4ddaec34cb0e67347668511e2"
                }
            ]
        },
        {
            "name": "kpat",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/21.12.1/src/kpat-21.12.1.tar.xz",
                    "sha256": "c24bc57ab0f0f13e26498561be1b8bf880415f9fb2e8f9357929e4e14b2a5d92"
                }
            ]
        }
    ]
}
