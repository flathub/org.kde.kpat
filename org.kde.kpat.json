                        "tar xhf Moo-2.005004.tar.gz",
                        "tar xhf Module-Runtime-0.016.tar.gz",
                        "tar xhf Sub-Quote-2.006006.tar.gz",
                        "cd Path-Tiny-0.120 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Template-Toolkit-3.009 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Moo-2.005004 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Module-Runtime-0.016 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Sub-Quote-2.006006 && perl Makefile.PL PREFIX=/app && make && make install",
