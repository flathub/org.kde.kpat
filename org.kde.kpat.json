                        "cd Moo-2.005005 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Module-Runtime-0.016 && perl Makefile.PL PREFIX=/app && make && make install",
                        "cd Sub-Quote-2.006008 && perl Makefile.PL PREFIX=/app && make && make install",
